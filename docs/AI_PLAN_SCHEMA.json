{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AAS AI Plan",
  "type": "object",
  "required": ["version", "goal", "operatingMode", "liveStatus", "steps", "safety"],
  "properties": {
    "version": { "type": "string", "enum": ["1"] },
    "goal": { "type": "string" },
    "operatingMode": { "type": "string", "enum": ["CATALOG", "SIMULATION", "LIVE"] },
    "liveStatus": { "type": "string", "enum": ["READY", "DEGRADED", "BLOCKED"] },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "summary", "requiresConfirmation"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["observe", "ask", "propose", "execute"] },
          "summary": { "type": "string" },
          "requiresConfirmation": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    },
    "safety": {
      "type": "object",
      "required": ["policyHash", "notes"],
      "properties": {
        "policyHash": { "type": "string" },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
